    <main>
        <div class="container">
            <div class="col-9">  
                {{#if photos}}
                {{#each photos}}           
                <div class="card">
                    <div class="top">
                        <div class="userDetails">
                            <div>
                                <div class="profilepic">
                                    <div class="profile_img">
                                        <div class="image">
                                            <img src="/images/person.png" alt="img8">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <h3>
                                <p>
                                    {{owner.username}}
                                    <br>
                                    <span>{{location}}</span>
                                </p>

                            </h3>
                        </div>
                    </div>
                    <div class="imgBx" id="{{_id}}">
                        <img src="{{image}}" alt="post" class="cover">
                    </div>
                    <h5 class="petName">Name: {{name}}</h5>
                    <h5 class="petAge">Age: {{age}}</h5>
                    <a href="/photos/details/{{_id}}" id="see-details">
                        <h4 class="details">See details</h4>
                    </a>
                </div>
                {{/each}}
                {{else}}
                <article class="not-available-photo">
                    <h1>No photo posts yet.</h1>
                </article>
                {{/if}}
            </div>
        </div>
    </main>
